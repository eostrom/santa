<h1>People</h1>

<form id="add-person">
  <input type="text" name="name">
  <input type="submit" value="Add">
</form>

<table>
  <% for person in @people: %>
    <tr>
      <td>
        <%= person.get('name') %>
      </td>
      <td>
        <button
            class="delete-person"
            data-person-id="<%= person.get('id') %>">
          Delete
        </button>
      </td>
    </tr>
  <% end %>
</table>
